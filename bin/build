#!/bin/bash
#
# $Info: Invoke cmake/make in build directory if present and generate logfile. $
# $Syntax: build [OPTIONS] TARGET $
# $Options: -d => debug mode; -gdb => invoke with gdb; -run => execute after compile; -v => verbose compile

# Check for proper environment
let error_count=0
function Error() {
  echo "ERROR: $@" 1>&2
  let error_count++
}
for var in SYSTEMC PROJ_ROOT CXX CC ; do
  perl -e 'exit (not exists $ENV{"$ARGV[0]"})' $var ||\
    Error "Missing definition of \$$var."
done
sc_ver_file="$SYSTEMC/include/sysc/kernel/sc_ver.h"
if [[ ! -r $sc_ver_file ]]; then
  Error "SYSTEMC does not refer to a proper installation."
fi
if [[ error_count -gt 0 ]]; then
  echo "Please fix errors and retry."
  exit 1
fi

# Setup option defaults
HERE=$(/bin/pwd)
TARGET="" # default
CMAKE_OPTS=""
MAKE_OPTS=""
RUN_OPTS=""
ARGS=""
RUN=0
CLEAN=0
GDBP=""
# If name of script is run...
if [[ $0 =~ .*run ]]; then
  RUN=1
fi

# Put up a big banner
printf "|\n|\n|\n"
clear;
ruler '*'

# Scan command-line for option overrides
while [[ "$1" =~ -.* ]]; do
  if [[ "$1" == "-v" ]]; then
    MAKE_OPTS="${MAKE_OPTS} VERBOSE=1"
    RUN_OPTS="${RUN_OPTS} -v"
    VERBOSE=1
    shift
  elif [[ "$1" == "-norun" ]]; then
    RUN=1
    shift
  elif [[ "$1" == "-run" ]]; then
    RUN=1
    shift
  elif [[ "$1" == "-clean" ]]; then
    CLEAN=1
    shift
  elif [[ "$1" == "-gdb" ]]; then
    RUN=1
    GDBP=gdb
    shift
  elif [[ "$1" == "-d" ]]; then
    CMAKE_OPTS="${CMAKE_OPTS} -DCMAKE_BUILD_TYPE=Debug"
    RUN_OPTS="${RUN_OPTS} -debug"
    shift
  elif [[ "$1" == "-a" ]]; then
    shift
    ARGS="$ARGS $1"
    shift
  else
    break
  fi
done
if [[ -r CMakeLists.txt ]]; then
  TARGET=$(perl -lane 'if(m{add_executable[\(] *([^[:space:]]+)}){print $1; exit 0;}' CMakeLists.txt)
fi
if [[ $# > 0 ]]; then
  TARGET="$1"
  shift
elif [[ "$TARGET" == "" ]]; then
  echo "INFO: Using default target - all"
else
  echo "INFO: Using default target - $TARGET"
fi
if [[ "$TARGET" != "" ]]; then
header -uc "$TARGET"
fi

# Move into build directory if present (recommended)
ROOT_DIR="."
BUILD_DIR="."
if [[ -r ./build ]]; then
  ROOT_DIR=".."
  BUILD_DIR="build"
  echo "cd $BUILD_DIR"
  cd $BUILD_DIR
fi

# Build
rm -f make.log run.log $ROOT_DIR/make.log $ROOT_DIR/run.log
if [[ -r $ROOT_DIR/CMakeLists.txt ]]; then
  echo "cmake ${CMAKE_OPTS}$ROOT_DIR 2>&1 | tee -a make.log"
  cmake "${CMAKE_OPTS}" $ROOT_DIR
fi
if [[ $CLEAN == 1 ]]; then
  echo "make clean 2>&1 | tee -a $ROOT_DIR/make.log"
  make clean 2>&1 | tee -a $ROOT_DIR/make.log
fi
if [[ "$TARGET" == "" ]]; then
  TARGET=$(make help | perl -lane '/^\.\.\. .*\.x$/ && print $F[1]')
  header -uc "$TARGET"
fi
if [[ -x $TARGET ]]; then rm $TARGET; fi
echo "make $TARGET ${MAKE_OPTS} 2>&1 | tee -a $ROOT_DIR/make.log"
make $TARGET ${MAKE_OPTS} 2>&1 | c++filt |tee -a $ROOT_DIR/make.log
filter-mlog $ROOT_DIR/make.log

# Run
if [[ $RUN == 1 ]]; then
  cd $ROOT_DIR;
  env DEBUG=1\
    LD_LIBRARY_PATH=$SYSTEMC/lib \
    DYLD_LIBRARY_PATH=$SYSTEMC/lib \
  $GDBP $BUILD_DIR/$TARGET -- $RUN_OPTS ${ARGS} 2>&1 \
  | tee $BUILD_DIR/run.log;

  if [[ "$ROOT_DIR" != "$BUILD_DIR" ]]; then
    #filter-sclog $BUILD_DIR/run.log | c++filt >run.log;
    c++filt < $BUILD_DIR/run.log >run.log;
  else
    # filter-sclog $BUILD_DIR/run.log | c++filt >$BUILD_DIR/run2.log;
    c++filt < $BUILD_DIR/run.log >$BUILD_DIR/run2.log;
    rm $BUILD_DIR/run.log
    mv $BUILD_DIR/run2.log run.log
  fi
fi
if [[ -r make.log ]]; then
  echo "Info: Created make.log"
fi
if [[ -r run.log ]]; then
  echo "Info: Created run.log"
fi

# The end
